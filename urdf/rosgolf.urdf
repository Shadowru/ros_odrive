<robot name="rosgolf_robot">

    <material name="yellow">
        <color rgba="255 255 0 1"/>
    </material>

    <material name="gray">
        <color rgba="128 128 128 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <link name="base_footprint">
    </link>

    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.72 0.485 0.05"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.20 0 0.075"/>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.72 0.485 0.05"/>
                <origin rpy="0 0 0" xyz="0.20 0 0.075"/>
            </geometry>
        </collision>
    </link>

    <link name="cover">
        <visual>
            <geometry>
                <box size="0.72 0.485 0.15"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0.20 0 0.175"/>
            <material name="yellow"/>
        </visual>
    </link>

    <joint name="base_to_cover" type="fixed">
        <parent link="base_link"/>
        <child link="cover"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <link name="lwheel">
        <visual>
            <geometry>
                <cylinder length="0.07" radius="0.12"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black"/>
        </visual>
    </link>

    <joint name="base_to_lwheel" type="fixed">
        <parent link="base_link"/>
        <child link="lwheel"/>
        <origin xyz="0 0.29 0.12" rpy="1.5708 0 0"/>
    </joint>

    <link name="rwheel">
        <visual>
            <geometry>
                <cylinder length="0.07" radius="0.12"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="black"/>
        </visual>
    </link>

    <joint name="base_to_rwheel" type="fixed">
        <parent link="base_link"/>
        <child link="rwheel"/>
        <origin xyz="0 -0.29 0.12" rpy="-1.5708 0 0"/>
    </joint>

    <link name="fwheel">
        <visual>
            <geometry>
                <cylinder length="0.02" radius="0.035"/>
            </geometry>
            <origin rpy="1.578 0 0" xyz="0 0 0"/>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="base_to_fwheel" type="fixed">
        <parent link="base_link"/>
        <child link="fwheel"/>
        <origin xyz="0.47 0 0.035" rpy="0 0 0"/>
    </joint>

    <link name="laser">
        <visual>
            <geometry>
                <cylinder length="0.04" radius="0.04"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="gray"/>
        </visual>
    </link>

    <joint name="base_to_scanner" type="fixed">
        <parent link="base_link"/>
        <child link="laser"/>
        <origin xyz="0.0 0 0.26" rpy="0 0 0"/>
    </joint>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

</robot>